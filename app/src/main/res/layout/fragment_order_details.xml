<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content">

        <include
            layout="@layout/toolbar_default"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="@string/order_details_title"
                  android:textSize="22sp"
                  android:textColor="#ffffff"/>

        <ImageView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="@dimen/margin_big"
                  android:layout_gravity="left|center_vertical"
                  android:src="@drawable/ic_chevron_left_white_36dp"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginRight="@dimen/margin_big"
            android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/margin_huge"
                      android:layout_marginBottom="@dimen/margin_medium"
                      android:text="@string/order_details_route"
                      android:textSize="20sp"
                      android:textColor="@color/secondary_text"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/margin_medium"
                          android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/map_marker"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="Большая конюшенная улица, 27"
                          android:textSize="20sp"
                          android:textColor="@color/secondary_text"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/margin_big"
                          android:layout_marginBottom="@dimen/margin_big"
                          android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/map_marker"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="Дальневосточный проспект, 227"
                          android:textSize="20sp"
                          android:textColor="@color/secondary_text"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/margin_huge"
                          android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/calendar_blank"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginRight="@dimen/margin_small"
                          android:text="18 сентября, 16:20"
                          android:textSize="18sp"
                          android:textColor="@color/secondary_text"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/account_multiple"/>

                <!-- there is plurals in string.xml for this text -->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="1 passenger"
                          android:textSize="18sp"
                          android:textColor="@color/secondary_text"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/margin_medium"
                          android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/clock"/>

                <!-- there is plurals in string.xml for this text -->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="5 hours of rent"
                          android:textSize="18sp"
                          android:textColor="@color/secondary_text"/>

            </LinearLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/margin_huge"
                      android:layout_marginBottom="@dimen/margin_medium"
                      android:text="@string/order_details_load_category"
                      android:textSize="20sp"
                      android:textColor="@color/secondary_text"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/margin_medium"
                      android:layout_marginBottom="@dimen/margin_huge"
                      android:text="@string/order_details_cme_category"
                      android:textSize="18sp"
                      android:textColor="@color/secondary_text"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/margin_huge"
                      android:layout_marginBottom="@dimen/margin_big"
                      android:text="@string/order_details_additional_services"
                      android:textSize="20sp"
                      android:textColor="@color/secondary_text"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/margin_big"
                          android:layout_marginBottom="@dimen/margin_big"
                          android:orientation="horizontal">

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_weight="1"
                          android:text="@string/order_details_packing"
                          android:textSize="18sp"
                          android:textColor="@color/secondary_text"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="500 Р"
                          android:textSize="19sp"
                          android:textColor="@color/accent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/secondary_text"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/margin_big"
                          android:layout_marginBottom="@dimen/margin_big"
                          android:orientation="horizontal">

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_weight="1"
                          android:text="@string/order_details_services_of_loaders"
                          android:textSize="18sp"
                          android:textColor="@color/secondary_text"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="2 500 Р"
                          android:textSize="19sp"
                          android:textColor="@color/accent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/secondary_text"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/margin_big"
                          android:layout_marginBottom="@dimen/margin_big"
                          android:orientation="horizontal">

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_weight="1"
                          android:text="@string/order_details_delivery_floor"
                          android:textSize="18sp"
                          android:textColor="@color/secondary_text"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="800 Р"
                          android:textSize="19sp"
                          android:textColor="@color/accent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/secondary_text"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/margin_huge"
                          android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/comment_outline"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="@string/order_details_comment"
                          android:textSize="20sp"
                          android:textColor="@color/secondary_text"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/margin_huge"
                          android:layout_marginBottom="@dimen/margin_huge"
                          android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/profile_avatar_size"
                    android:layout_height="@dimen/profile_avatar_size"
                    android:layout_marginRight="@dimen/margin_big"
                    android:background="@color/accent"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="@string/order_details_comment_info"
                          android:textSize="17sp"
                          android:textColor="@color/secondary_text"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/secondary_text"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/margin_huge"
                          android:layout_marginBottom="@dimen/margin_huge"
                          android:orientation="horizontal">

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_weight="1"
                          android:text="@string/order_details_total_cost"
                          android:textSize="20sp"
                          android:textColor="@color/secondary_text"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:text="8 400 Р"
                          android:textSize="24sp"
                          android:textColor="@color/accent"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>